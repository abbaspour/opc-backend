{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",

  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2020",
    "lib": ["es2020"],
    "strict": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "./js",
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}