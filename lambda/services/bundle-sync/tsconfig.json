{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2019",
    "lib": ["dom","es2020"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "./js",
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}